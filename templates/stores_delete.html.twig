{% extends "master.html.twig" %}

{% block content %}
    {% if errorList %}
        <ul>
            {% for error in errorList %}
                <li>{{error}}</li>
                {% endfor %}
        </ul>
    {% endif %}
    <div class="page-content">
        <div class="content-block-title">Delete Product</div>
        <div class="list-block">
            <ul>
                <li class="item-content">
                    <div class="item-media"><img src="{{s.logoPath}}"></div>
                    <div class="item-inner">
                        <div class="item-title">{{s.name}}</div>
                        <div class="item-after">Label</div>
                    </div>
                </li>
            </ul>
            <div class="list-block-label">Are you sure you want to delete this product?</div>
        </div>
        <p class="buttons-row">
            <a href="/stores/view/{{s.id}}" class="button button-big button-fill button-raised color-cyan">Cancel</a>
            {# action not necessary since we're already on URL
               looking like action="/admin/products/delete/{{p.id}}"  action="/stores/delete/{{s.id}}" #}
        <form method="post" >
            <input type="hidden" name="confirmed" value="true">
            <input type="submit"  class="button button-big button-fill button-raised color-pink" value="Delete">
        </form>
    </p>
</div> 

{% endblock %}


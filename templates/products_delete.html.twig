{% extends "master.html.twig" %}



{% block content %}
    {% if errorList %}
    <ul>
        {% for error in errorList %}
            <li>{{error}}</li>
            {% endfor %}
    </ul>
{% endif %}
    <div class="page-content">
        <div class="content-block-title">Delete Product</div>
         <div class="card">
        <div class="card-header">{{p.prodName}}</div>
        <img src="{{p.picPath}}" style="width:100%; height:100%;">
        <div class="card-content">
            <div class="card-content-inner">

                <p>Are you sure you want to delete this product?</p>
                {# TODO ADD link to prices page WHERE productId={{p.id}}
                <p class="buttons-row">
                    <a href="#" class="button button-big ripple-yellow button-fill">{{price}} {% if price > 1 %}Prices{% elseif price < 0 %}Prices{% else %}Price{% endif %}</a>
                </p> #}
            </div>
        </div>
         </div>
        <form method="post" class="ajax-submit-onchange">
            <div class="row">
                <div class="col-50">
                    <input type="submit" class="button button-big button-red" value="Cancel">
                </div>
        </form>
        {# action not necessary since we're already on URL
           looking like action="/admin/products/delete/{{p.id}}" #}
        <form method="post" class="ajax-submit-onchange">
            <input type="hidden" name="confirmed" value="true">
            <div class="col-50">
                 <input type="submit" class="button button-big button-green" value="Delete">
            </div>
    </div> 
</form>
</div
</div>



{% endblock %}

